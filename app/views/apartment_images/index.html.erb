<div>
  <div>
    <h1>
      List of all apartment images
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new apartment image
    </h2>

    <form action="/insert_apartment_image" method="post">
      <div>
        <label for="apartment_id_box">
          Apartment
        </label>

        <input type="text" id="apartment_id_box" name="query_apartment_id">
      </div>

      <div>
        <label for="image_url_box">
          Image url
        </label>

        <input type="text" id="image_url_box" name="query_image_url">
      </div>

      <button>
        Create apartment image
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Apartment
        </th>

        <th>
          Image url
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_apartment_images.each do |an_apartment_image| %>
      <tr>
        <td>
          <%= an_apartment_image.id %>
        </td>

        <td>
          <%= an_apartment_image.apartment_id %>
        </td>

        <td>
          <%= an_apartment_image.image_url %>
        </td>

        <td>
          <%= time_ago_in_words(an_apartment_image.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_apartment_image.updated_at) %> ago
        </td>

        <td>
          <a href="/apartment_images/<%= an_apartment_image.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
