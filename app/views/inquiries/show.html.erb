<div>
  <div>
    <h1>
      Inquiry #<%= @the_inquiry.id %> details
    </h1>

    <div>
      <div>
        <a href="/inquiries">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_inquiry/<%= @the_inquiry.id %>">
          Delete inquiry
        </a>
      </div>
    </div>

    <dl>
      <dt>
        message
      </dt>
      <dd>
        <%= @the_inquiry.message %>
      </dd>

      <dt>
        Apartment
      </dt>
      <dd>
        <%= @the_inquiry.apartment_id %>
      </dd>

      <dt>
        Asker
      </dt>
      <dd>
        <%= @the_inquiry.asker_id %>
      </dd>

      <dt>
        Answerer
      </dt>
      <dd>
        <%= @the_inquiry.answerer_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_inquiry.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_inquiry.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit inquiry
    </h2>

    <form action="/modify_inquiry/<%= @the_inquiry.id %>"  method="post" >
      <div>
        <label for="message_box">
          message
        </label>

        <input type="text" id="message_box" name="query_message" value="<%= @the_inquiry.message %>">
      </div>

      <div>
        <label for="apartment_id_box">
          Apartment
        </label>

        <input type="text" id="apartment_id_box" name="query_apartment_id" value="<%= @the_inquiry.apartment_id %>">
      </div>

      <div>
        <label for="asker_id_box">
          Asker
        </label>

        <input type="text" id="asker_id_box" name="query_asker_id" value="<%= @the_inquiry.asker_id %>">
      </div>

      <div>
        <label for="answerer_id_box">
          Answerer
        </label>

        <input type="text" id="answerer_id_box" name="query_answerer_id" value="<%= @the_inquiry.answerer_id %>">
      </div>

      <button>
        Update inquiry
      </button>
    </form>
  </div>
</div>

<hr>
