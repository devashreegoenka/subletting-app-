<div>
  <div>
    <h1>
      List of all inquiries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new inquiry
    </h2>

    <form action="/insert_inquiry" method="post">
      <div>
        <label for="messaage_box">
          Messaage
        </label>

        <input type="text" id="messaage_box" name="query_messaage">
      </div>

      <div>
        <label for="apartment_id_box">
          Apartment
        </label>

        <input type="text" id="apartment_id_box" name="query_apartment_id">
      </div>

      <div>
        <label for="asker_id_box">
          Asker
        </label>

        <input type="text" id="asker_id_box" name="query_asker_id">
      </div>

      <div>
        <label for="answerer_id_box">
          Answerer
        </label>

        <input type="text" id="answerer_id_box" name="query_answerer_id">
      </div>

      <button>
        Create inquiry
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Messaage
        </th>

        <th>
          Apartment
        </th>

        <th>
          Asker
        </th>

        <th>
          Answerer
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_inquiries.each do |an_inquiry| %>
      <tr>
        <td>
          <%= an_inquiry.id %>
        </td>

        <td>
          <%= an_inquiry.messaage %>
        </td>

        <td>
          <%= an_inquiry.apartment_id %>
        </td>

        <td>
          <%= an_inquiry.asker_id %>
        </td>

        <td>
          <%= an_inquiry.answerer_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_inquiry.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_inquiry.updated_at) %> ago
        </td>

        <td>
          <a href="/inquiries/<%= an_inquiry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
