<div>
  <div>
    <h1>
      Inquiries
    </h1>
  </div>
</div>

<hr>

<h1>Received inquiries for my listings</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Message</th>
      <th>Apartment</th>
      <th>Asker</th>
      <th>Answerer</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @list_of_inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.id %></td>
        <td><%= inquiry.message %></td>
        <td><%= inquiry.apartment.title %></td> 
        <td><%= inquiry.asker.name %></td> 
        <td><%= inquiry.answerer.try(:name) %></td> 
        <td><%= time_ago_in_words(inquiry.created_at) %> ago</td>
        <td><%= time_ago_in_words(inquiry.updated_at) %> ago</td>
        <td><a href="/inquiries/<%= inquiry.id %>">Show details</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
